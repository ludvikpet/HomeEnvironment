<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <TextView
        android:id="@+id/Lux_Measurement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is for measuring light"
        app:layout_constraintBottom_toTopOf="@id/button_first"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Lux_Measurement" />

    <Button
        android:id="@+id/MeasuringLightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="forMeasuringLight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_first"
        app:layout_constraintVertical_bias="0.706" />

    <TextView
        android:id="@+id/pressureSensorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"


        android:text="This is for measuring pressure!"
        app:layout_constraintTop_toBottomOf="@id/Lux_Measurement"
        tools:layout_editor_absoluteX="125dp" />

    <TextView
        android:id="@+id/Humidity_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is for measuring humidity!"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="286dp" />

    <TextView
        android:id="@+id/Temperature_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is for measuring temperature!"
        app:layout_constraintTop_toBottomOf="@id/Humidity_Text"
        android:gravity="center"
        />
</androidx.constraintlayout.widget.ConstraintLayout>